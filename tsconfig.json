{
  "extends": "eslint-config-react-native-matipl01/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": ["./*"]
    }
  },
  "exclude": [
    "node_modules",
    // Expo must update types colliding with Reanimated CSS Animations
    // (for now, we exclude expo-env.d.ts)
    "expo-env.d.ts",
    "ios",
    "android",
    ".expo",
    "dist",
    "web-build"
  ]
}
